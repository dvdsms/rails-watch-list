
<div class="container">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1611673982064-7385a5d9574e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80)">
    <%= @list.name %>
  </div>
</div>

<%= link_to "delete this list", list_path(@list), method: :delete, class: "btn btn-cancel", data: { confirm: "Are you sure you want to delete this list?" } %>

<%= link_to 'Add a bookmark', new_list_bookmark_path(@list) %>

<div class="container">
  <div class="row">
    <% @list.movies.each do |movie|%>
      <div class="col-4 my-5">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1611673982064-7385a5d9574e?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80)">
          <%= link_to movie.title, list_path(@list) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
